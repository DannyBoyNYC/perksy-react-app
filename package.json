{
  "name": "perksy-web-react",
  "version": "0.1.0",
  "description": "Perksy web app with React server-side rendering",
  "main": "index.js",
  "scripts": {
    "dev": "next ./src -p 8080",
    "build": "next build ./src",
    "start": "next start ./src -p 8080",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build",
    "gen": "./scripts/component-generator.sh",
    "lint": "eslint ./src",
    "test": "jest",
    "test:update": "jest -u",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/perksy/perksy-web-react.git"
  },
  "dependencies": {
    "classnames": "2.2.6",
    "next": "7.0.2",
    "prop-types": "15.6.2",
    "react": "16.5.2",
    "react-dom": "16.5.2",
    "react-jss": "8.6.1",
    "react-lazyload": "2.3.0",
    "react-redux": "5.1.1",
    "react-select": "2.1.1",
    "redux": "4.0.1"
  },
  "devDependencies": {
    "@babel/core": "7.1.2",
    "@babel/plugin-transform-destructuring": "7.1.3",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "8.2.6",
    "babel-jest": "23.6.0",
    "babel-loader": "8.0.4",
    "babel-plugin-root-import": "5.1.0",
    "babel-preset-next": "1.2.0",
    "enzyme": "3.7.0",
    "enzyme-adapter-react-16": "1.6.0",
    "enzyme-to-json": "3.3.4",
    "eslint": "5.7.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "3.1.0",
    "eslint-import-resolver-babel-plugin-root-import": "1.1.1",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jest": "21.26.0",
    "eslint-plugin-jsx-a11y": "6.1.2",
    "eslint-plugin-prettier": "3.0.0",
    "eslint-plugin-react": "7.11.1",
    "husky": "1.1.2",
    "jest": "23.6.0",
    "jest-environment-enzyme": "7.0.0",
    "jest-enzyme": "7.0.0",
    "lint-staged": "7.3.0",
    "prettier": "1.14.3",
    "react-styleguidist": "8.0.2",
    "react-test-renderer": "16.5.2",
    "webpack": "4.23.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:coverage"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ]
  }
}
